for fs in 4e 4mu 2e2mu
do

  cp hzz4l_${fs}S_13TeV_xs_bin0.txt hzz4l_${fs}S_13TeV_xs_bin1.txt
  cp hzz4l_${fs}S_13TeV_xs_bin0.txt hzz4l_${fs}S_13TeV_xs_bin2.txt
  cp hzz4l_${fs}S_13TeV_xs_bin0.txt hzz4l_${fs}S_13TeV_xs_bin3.txt
  cp hzz4l_${fs}S_13TeV_xs_bin0.txt hzz4l_${fs}S_13TeV_xs_bin4.txt

done

sed -i 's~bin0~bin1~g' hzz4l*bin1.txt
sed -i 's~bin0~bin2~g' hzz4l*bin2.txt
sed -i 's~bin0~bin3~g' hzz4l*bin3.txt
sed -i 's~bin0~bin4~g' hzz4l*bin4.txt
